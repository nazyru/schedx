<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:padding="@dimen/padding" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent">
  	
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="#99cc00"
    	android:orientation="horizontal">
    	
     <ImageView 
         android:id="@+id/expand_collapse_button"
         android:src="@drawable/navigation_collapse"
         android:layout_width="0dp"
    	 android:layout_height="wrap_content"
    	 android:layout_weight="1"
    	 android:contentDescription="@string/expand_image_button_description"
         />  
          
    <TextView android:id="@+id/today_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        style="@style/detail_header_style"
        android:hint="@string/today_field"/>
    
    <ImageView 
         android:id="@+id/today_add_image_view"
         android:src="@drawable/action_content_new"
         android:layout_width="0dp"
    	 android:layout_height="wrap_content"
    	 android:layout_weight="1"
    	 android:layout_gravity="right"
    	 android:contentDescription="@string/add_button_description" />  
    
    </LinearLayout>
    
    <ListView
        android:id="@+id/today_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"/>
    
    <!-- 2nd Row -->
    
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="#99cc00"
    	android:orientation="horizontal">
    	
     <ImageView 
         android:id="@+id/expand_collapse_button2"
         android:src="@drawable/navigation_expand"
         android:layout_width="0dp"
    	 android:layout_height="wrap_content"
    	 android:layout_weight="1"
    	 android:contentDescription="@string/expand_image_button_description"
         />  
          
    <TextView android:id="@+id/tomorrow_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        style="@style/detail_header_style"
        android:hint="@string/tomorrow_field"/>  
    
    <ImageView 
         android:id="@+id/add_button2"
         android:src="@drawable/action_content_new"
         android:layout_width="0dp"
    	 android:layout_height="wrap_content"
    	 android:layout_weight="1"
    	 android:layout_gravity="right"
    	 android:contentDescription="@string/add_button_description" />  
    
    </LinearLayout>
    
    <ListView
        android:id="@+id/tomorrow_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"/>
    
    <!-- 3rd Row -->
    
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="#99cc00"
    	android:orientation="horizontal">
    	
     <ImageView 
         android:id="@+id/expand_collapse_button3"
         android:src="@drawable/navigation_expand"
         android:layout_width="0dp"
    	 android:layout_height="wrap_content"
    	 android:layout_weight="1"
    	 android:contentDescription="@string/expand_image_button_description"
         />  
          
    <TextView android:id="@+id/upcoming_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        style="@style/detail_header_style"
        android:hint="@string/upcoming_field"/>  
    
    <ImageView 
         android:id="@+id/add_button3"
         android:src="@drawable/action_content_new"
         android:layout_width="0dp"
    	 android:layout_height="wrap_content"
    	 android:layout_weight="1"
    	 android:layout_gravity="right"
    	 android:contentDescription="@string/add_button_description" />  
    
    </LinearLayout>
    
    <ListView
        android:id="@+id/upcoming_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"/>
    
    
</LinearLayout>

