<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  	xmlns:android="http://schemas.android.com/apk/res/android">
  	
    <LinearLayout 
        android:orientation="vertical" 
        android:padding="@dimen/padding" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        
        <Spinner 
            android:id="@+id/assessment_type_spinner" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        
        <Spinner 
            android:id="@+id/assessment_course_spinner" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        
        <TextView 
            android:id="@+id/assessment_date_picker" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="@string/date_picker_hint" 
            style="@style/my_pickers"
           	/>
        
        <TextView 
            android:id="@+id/assessment_time_picker" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/time_picker_hint"
            style="@style/my_pickers"/>
        
        <EditText 
            android:id="@+id/assessment_venue_view" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:hint="@string/assessment_venue_hint" />
        
        <Spinner 
            android:id="@+id/assessment_trigger_mode" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        
        <EditText 
            android:gravity="top" 
            android:id="@+id/assessment_memo_view" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:hint="@string/assessment_memo_hint" 
            android:minLines="3" />
        
    </LinearLayout>
</ScrollView>