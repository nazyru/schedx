<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/my_app_color_light_green"
    android:padding="@dimen/padding"
    android:layout_gravity="bottom"
    android:animateLayoutChanges="true"
    android:orientation="horizontal">
    
    <ImageView android:id="@+id/call_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/call_icon"
        android:padding="@dimen/padding"
        android:contentDescription="@string/call_class_rep_title"/>
    
    <ImageView 
        android:id="@+id/email_class_rep" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/email_icon"
        android:padding="@dimen/padding"
        android:contentDescription="@string/email_class_rep_title"/>
    
</LinearLayout>
