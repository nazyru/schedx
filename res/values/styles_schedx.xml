<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Schedx" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_schedx</item>
        <item name="popupMenuStyle">@style/PopupMenu.Schedx</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Schedx</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Schedx</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Schedx</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Schedx</item>
        <item name="actionBarTabTextStyle">@style/ActionBarTabText</item>
        <item name="actionModeBackground">@drawable/cab_background_top_schedx</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_schedx</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Schedx</item> 
        <item name="homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>
        <item name="actionOverflowButtonStyle">@style/my_custom_overflow</item>
        <item name="actionModeCloseDrawable">@drawable/abs__ic_cab_done_holo_dark</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionMenuTextColor">@color/my_app_white_color</item>
      
    </style>

    <style name="ActionBar.Solid.Schedx" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_schedx</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_schedx</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_schedx</item>
        <item name="progressBarStyle">@style/ProgressBar.Schedx</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
    </style>
    
    <style name="ActionBarTitleText" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/my_app_white_color</item>
    </style>
    
     <style name="ActionModeStyle" parent="@style/Widget.Sherlock.Light.ActionMode">
         <item name="titleTextStyle">@style/ActionBarMode</item>
     </style>

    <style name="ActionBarMode" parent="@style/TextAppearance.Sherlock.Widget.ActionMode.Title">
       <item name="android:textColor">@color/my_app_white_color</item> 
    </style>
    
    <style name="ActionBar.Transparent.Schedx" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_schedx</item>
        <item name="progressBarStyle">@style/ProgressBar.Schedx</item>
    </style>
	
    <style name="PopupMenu.Schedx" parent="@style/Widget.Sherlock.Light.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/abs__menu_dropdown_panel_holo_light</item>
    </style>
	
    <style name="DropDownListView.Schedx" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_schedx</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTabStyle.Schedx" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_schedx</item>
    </style>
	
    <style name="ActionBarTabText" parent="@style/Widget.Sherlock.ActionBar.TabText">
        <item name="android:textColor">@color/my_app_white_color</item>
    </style>
    <style name="DropDownNav.Schedx" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_schedx</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_schedx</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_schedx</item>
    </style>
    
    <style name="ProgressBar.Schedx" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_schedx</item>
    </style>
    
    <style name="ActionButton.CloseMode.Schedx" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_schedx</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Schedx.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Schedx</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Schedx</item>
    </style>
    
    <style name="detail_header_style">
         <item name="android:textColor">@color/detail_header_color</item>
         <item name="android:background">@color/my_app_color_light_green</item>
         <item name="android:textStyle">bold</item>
     </style>
     
    <style name="text_header_style">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">#ff99cc00</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:layout_margin">4.0dip</item>
    </style>
    
    <style name="list_item" parent="@style/TextAppearance.Sherlock">
        <item name="android:textSize">20.0sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff99cc00</item>
    </style>
    <style name="list_item.sub_item">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="arrow" parent="@android:style/Widget">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    
    <style name="my_custom_overflow" parent="@style/Widget.Sherlock.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
    
    <style name="my_pickers">
        <item name ="android:background">#f2f2f2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>